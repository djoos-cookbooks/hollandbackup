#
# /etc/holland/holland.conf
#
# "The main configuration file (usually /etc/holland/holland.conf) defines both global settings as well as the active backup sets."
# (http://docs.hollandbackup.org/config.html)
#
# Generated by Chef for <%= node[:fqdn] %>
#

[holland]

# Defines where the plugins can be found
# This can be a comma-separated list but usually does not need to be modified
plugin_dirs = <%= @resource.plugin_dirs %>

# Top-level directory where backups are held
backup_directory = <%= @resource.backup_directory %>

# A comma-separated list of all the backup sets Holland should backup
# Each backup set is defined in /etc/holland/backupsets/<name>.conf by default
backupsets = <%= @resource.backupsets %>

# Sets the umask of the resulting backup files
umask = <%= @resource.umask %>

# Defines a path for holland and its spawned processes
path = <%= @resource.path %>

[logging]
# The log file itself
filename = <%= @resource.filename %>

# Sets the verbosity of Hollandâ€™s logging process
# Available options are debug, info, warning, error, and critical
level = <%= @resource.level %>